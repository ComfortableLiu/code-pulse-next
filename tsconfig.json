{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@router/*": [
        "router/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@entities/*": [
        "db/entities/*"
      ],
      "@migrations/*": [
        "db/migrations/*"
      ],
      "@subscribers/*": [
        "db/subscribers/*"
      ],
      "@controllers/*": [
        "server/controllers/*"
      ],
      "@services/*": [
        "server/services/*"
      ],
      "@models/*": [
        "server/models/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./dist/.next/types/**/*.ts",
    "./dist/frontend/types/**/*.ts",
    ".next/types/**/*.ts",
    "apps/frontend",
    "global.d.ts",
    "./dist/frontend/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
